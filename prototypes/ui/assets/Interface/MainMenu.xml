<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://nifty-gui.lessvoid.com/nifty-gui 
    https://raw.githubusercontent.com/nifty-gui/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    
	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />
    
	<screen id="start" controller="com.christopherdcanfield.ui.MainMenuState">
		<layer id="background" backgroundColor="#0000">
		    
		</layer>
		
		<layer id="foreground" backgroundColor="#4440" childLayout="vertical" padding="50px, 0px, 0px, 0px">
		    <panel id="singlePlayerButton" height="15%" width="60%" align="center" childLayout="center" 
			    margin="0px, 0px, 5px, 0px">
				<text id="titleText" text="Canfield RTS" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    color="#0094ffff" width="100%" height="100%" >
				</text>
			</panel>
			<panel id="singlePlayerButton" height="17.5%" width="60%" align="center" childLayout="center" style="nifty-panel-no-shadow" 
			    margin="0px, 0px, 5px, 0px">
				<interact onClick="onSinglePlayerButtonClicked()" />
				<text id="singlePlayerButtonText" text="Single Player" font="Interface/Fonts/LiberationSansNormal48.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="multiplayerButton" height="17.5%" width="60%" align="center" childLayout="center" 
			    style="nifty-panel-no-shadow" margin="0px, 0px, 5px, 0px">
				<interact onClick="onMultiplayerButtonClicked()" />
				<text id="multiplayerButtonText" text="Multiplayer" font="Interface/Fonts/LiberationSansNormal48.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="settingsButton" height="17.5%" width="60%" align="center" childLayout="horizontal" 
			    style="nifty-panel-no-shadow" margin="0px, 0px, 5px, 0px">
				<interact onClick="onSettingsButtonClicked()" />  
				<text id="settingsButtonText" text="Settings" font="Interface/Fonts/LiberationSansNormal48.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="exitButton" height="17.5%" width="60%" align="center" childLayout="horizontal" style="nifty-panel-no-shadow">
				<interact onClick="onExitButtonClicked()" /> 
				<text id="exitButtonText" text="Exit" font="Interface/Fonts/LiberationSansNormal48.fnt" 
			    	width="100%" height="100%" />
			</panel>
		</layer>
	</screen>
</nifty>