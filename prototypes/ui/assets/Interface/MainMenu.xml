<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://nifty-gui.lessvoid.com/nifty-gui 
    https://raw.githubusercontent.com/nifty-gui/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
	<screen id="start" controller="com.christopherdcanfield.ui.MainMenuState">
		<layer id="background" backgroundColor="#000f">
		    
		</layer>
		<layer id="foreground" backgroundColor="#cccf" childLayout="vertical" padding="50px, 0px, 50px, 0px">
			<panel id="singlePlayerButton" height="25%" width="65%" 
			    	align="center" childLayout="center" backgroundColor="#f008" >
				<interact onClick="onSinglePlayerButtonClicked()" />
				<text id="singlePlayerButtonText" text="Single Player" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="multiplayerButton" height="25%" width="65%" align="center" childLayout="center"
			       backgroundColor="#0f08">
				<interact onClick="onMultiplayerButtonClicked()" />
				<text id="multiplayerButtonText" text="Multiplayer" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="settingsButton" height="25%" width="65%" align="center" childLayout="horizontal"
			       backgroundColor="#00f8">
				<interact onClick="onSettingsButtonClicked()" />  
				<text id="settingsButtonText" text="Settings" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
			<panel id="exitButton" height="25%" width="65%" align="center" childLayout="horizontal"
			       backgroundColor="#00f8">
				<interact onClick="onExitButtonClicked()" />
				<text id="exitButtonText" text="Exit" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    width="100%" height="100%" >
				</text>
			</panel>
		</layer>
	</screen>
</nifty>