<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://nifty-gui.lessvoid.com/nifty-gui 
    https://raw.githubusercontent.com/nifty-gui/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
	<screen id="start" controller="com.christopherdcanfield.ui.MainMenuState">
		<layer id="background" backgroundColor="#000f">
		    
		</layer>
		<layer id="foreground" backgroundColor="#cccf" childLayout="vertical">
			<panel id="panel_top" height="25%" width="65%" align="center" childLayout="center"
			       backgroundColor="#f008">
				<text id="helloWorldText" text="hello \#0000ff#world" font="Interface/Fonts/LiberationSansNormal64.fnt" 
				    width="100%" height="100%"
				    visibleToMouse="true" >
					<interact onClick="onHelloWorldTextClicked()" />
				</text>
			</panel>
			<panel id="panel_mid" height="50%" width="65%" align="center" childLayout="center"
			       backgroundColor="#0f08">  
			</panel>
			<panel id="panel_bottom" height="25%" width="65%" align="center" childLayout="horizontal"
			       backgroundColor="#00f8">  
				<panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center" 
			       backgroundColor="#44f8">  
				</panel>
				<panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center"
			       backgroundColor="#88f8">  
				</panel>
			</panel>
		</layer>
	</screen>
</nifty>